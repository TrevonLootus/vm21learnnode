{% extends 'partials/layout.njk' %}
{% block content %}
{% if(name and age) %}
    <h1>Hello {{ name }}, you are {{ age }} years old</h1>
    {% endif %}
    <form action="/greeting" method="GET">
        <input type="text" name="name" placeholder="Enter your name">
        <input type="number" name="age" placeholder="Age" max="100">
        <input type="submit">
    <form>
{% endblock %}